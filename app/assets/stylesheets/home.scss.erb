body {
  background-color: snow;
  font-family: 'Lato', sans-serif;
}

.jumbotron {
  background-image: url("<%= asset_path('library.jpg') %> ");
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 100% 75%;
  padding: 100px 15px;
  margin-bottom: 20px;
  margin-top: 20px;
  color: #104E8B;
  background-color: #ECF1EF;
}
.list-group-item-index {
  position: relative;
  display: block;
  padding: 10px 15px;
  margin-bottom: -1px;
  background-color: whitesmoke;
  border: 1px solid #ddd;
}
.list-group-item-link {
  position: relative;
  display: block;
  padding: 10px 15px;
  margin-bottom: -1px;
  background-color: whitesmoke;
  border: 1px solid #ddd;
}

